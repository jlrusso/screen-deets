extends ../../layouts/main.pug 
block style
  link(type='text/css' rel='stylesheet' href='css/shows.css')
block content
  section(id='shows-wrap' class='pt-4')
    if shows.length > 0 
      div(class='grid-wrap mx-auto')
        each show in shows
          div(class='grid-item')
            div(class='card rounded bg-transparent' style=`background: url(${show.image})` title=(show.title))
              div(class='card-btn-wrap')
                a(href=`/shows/show-details/${show.id}` class='btn btn-danger d-block w-100') Get Details
    else 
      h3(class='display-4 text-center text-light') No Shows
      div(class='text-center')
        a(class='btn btn-danger px-4' href='/suggest') Suggest a Show

    if shows.length > 0
      nav(class='my-5')
        ul(class='pagination justify-content-center pagination-lg')
          li(class=(shows.length <= 16 ? 'page-item disabled' : 'page-item'))
            a(class='page-link bg-dark text-danger' href='#' aria-label='Previous')
              span(aria-hidden='true') &laquo;
          li(class='page-item active')
            a(class='page-link' href='/movies/p1') 1
          if shows.length > 16
            li(class='page-item')
              a(class='page-link bg-dark text-danger' href='/movies/p2') 2
          if shows.length > 32
            li(class='page-item')
              a(class='page-link bg-dark text-danger' href='/movies/p3') 3
          if shows.length > 48
            li(class='page-item')
              a(class='page-link bg-dark text-danger' href='/movies/p4') 4
          if shows.length > 64
            li(class='page-item')
              a(class='page-link bg-dark text-danger' href='/movies/p5') 5
          if shows.length > 80
            li(class='page-item')
              a(class='page-link bg-dark text-danger' href='/movies/p6') 6
          if shows.length > 96
            li(class='page-item')
              a(class='page-link bg-dark text-danger' href='/movies/p7') 7
          if shows.length > 112
            li(class='page-item')
              a(class='page-link bg-dark text-danger' href='/movies/p8') 8
          if shows.length > 0
            li(class=(shows.length <= 16 ? 'page-item disabled' : 'page-item'))
              a(class='page-link bg-dark text-danger' href='/movies/p9' aria-label='Next')
                span(aria-hidden='true') &raquo;